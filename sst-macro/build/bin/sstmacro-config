#!/bin/sh

prefix=/home/xianwei/local/sstmacro
exec_prefix=${prefix}
ldflags=" -Wl,--no-as-needed -L${exec_prefix}/lib -lsprockit -lsstmac @BOOST_LDFLAGS@ -ldl -ldl  -lpthread"
libdir="${exec_prefix}/lib"
libs="-ldl -ldl  -lpthread"
includedir=${prefix}/include
package="sstmacro"
version="12.1.0"
cflags="-g -O2"
cc="gcc"
cppflags="@BOOST_CPPFLAGS@ -I${includedir}/sstmac  -I${includedir} -I${includedir}/sstmac/software/libraries -I${includedir}/sstmac -I${includedir}/sstmac/tools"
cxxflags="-g -O2"
cxx="g++"
upc="@UPC@"
fc="gfortran"
fcflags="-g -O2"
fclibs="@FCLIBS@"
libtool="${prefix}/bin/sstmacro-libtool"

usage="\
Usage: $0 [--prefix[=DIR]] [--exec-prefix[=DIR]] [--version] [--ldflags] [--ldflagsparallel] [--libdir] [--libs] [--cflags] [--cc] [--cppflags] [--cxx] [--cxxflags] [--fc] [--fcflags] [--fclibs] [--includedir] [--libtool]"

if test $# -eq 0; then
      echo "${usage}" 1>&2
      exit 1
fi

exec_prefix_set=no

while test $# -gt 0; do
  case "$1" in
  -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
  *) optarg= ;;
  esac

  case $1 in
    --prefix=*)
      prefix=$optarg
      if test $exec_prefix_set = no ; then
        exec_prefix=$optarg
      fi
      ;;
    --prefix)
      echo $prefix
      ;;
    --exec-prefix=*)
      exec_prefix=$optarg
      exec_prefix_set=yes
      ;;
    --exec-prefix)
      echo $exec_prefix
      ;;
    --version)
      echo $version
      ;;
    --ldflags)
      echo $ldflags
      ;;
    --ldflagsparallel)
      echo $ldflagsparallel
      ;;
    --cflags)
      echo $cflags
      ;;
    --cc)
      echo $cc
      ;;
    --cppflags)
      echo $cppflags
      ;;
    --cxxflags)
      echo $cxxflags
      ;;
    --cxx)
      echo $cxx
      ;;
    --upc)
      echo $upc
      ;;
    --upc-flags)
      echo "${prefix}/bin/sstmac_upc_preprocessor.py"
      ;;
    --fc)
      echo $fc
      ;;
    --fcflags)
      echo $fcflags
      ;;
    --fclibs)
      echo $fclibs
      ;;
    --libdir)
      echo $libdir
      ;;
    --libs)
      echo $libs
      ;;
    --includedir)
      echo $includedir
      ;;
    --libtool)
      echo $libtool
      ;;
    *)
      echo "${usage}" 1>&2
      exit 1
      ;;
  esac
  shift
done
